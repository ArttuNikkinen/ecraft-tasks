<Window x:Class="Conference_Room_App.AddRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Conference_Room_App"
        mc:Ignorable="d"
        Title="AddRoom" Height="450" Width="800"
        Background="#FC0">
    <Grid>
        <TextBox Name ="roomName" HorizontalAlignment="Left" Height="23" Margin="10,48,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Room name" HorizontalAlignment="Left" Margin="10,22,0,0" VerticalAlignment="Top"/>
        <Button Name="addRoomButton" Content="Add room" HorizontalAlignment="Left" Margin="9,94,0,0" VerticalAlignment="Top" Width="75" Click="AddRoomButton_Click"/>
        <Button Name="addRoomClose" Content="Cancel" HorizontalAlignment="Left" Margin="10,130,0,0" VerticalAlignment="Top" Width="75" Click="AddRoomCancel_Click"/>
    </Grid>
</Window>
