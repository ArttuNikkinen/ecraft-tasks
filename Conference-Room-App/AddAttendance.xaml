<Window x:Class="Conference_Room_App.AddAttendance"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Conference_Room_App"
        mc:Ignorable="d"
        Title="AddAttendance" Height="450" Width="800"
        Background="#FC0">
    <Grid>
        <TextBox Name="meetingTitle" HorizontalAlignment="Left" Height="23" Margin="10,40,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="personName"  HorizontalAlignment="Left" Height="23" Margin="10,111,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Meeting" HorizontalAlignment="Left" Margin="10,14,0,0" VerticalAlignment="Top"/>
        <Label Content="Attendee's full name" HorizontalAlignment="Left" Margin="10,86,0,0" VerticalAlignment="Top"/>
        <Button Name="addAttendance_Button" Content="Add attendance" HorizontalAlignment="Left" Margin="10,163,0,0" VerticalAlignment="Top" Width="110" Height="30" Click="AddAttendance_Button_Click"/>
        <Button Name="attendanceCancel" Content="Close" HorizontalAlignment="Left" Margin="10,203,0,0" VerticalAlignment="Top" Width="110" Height="30" Click="AttendanceCancel_Click"/>

    </Grid>
</Window>
